<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="web.server.api.mapper.TokenMapper">

	<select id="selectByToken" resultType="web.server.api.entity.TokenEntity" parameterType="String">
        SELECT * FROM voc_token WHERE token = #{token};
    </select>
    
    <insert id="insert" parameterType="web.server.api.entity.TokenEntity">
    	INSERT INTO voc_token (username, token, expiration)
			VALUES (#{username}, #{token}, #{expiration});
    </insert>
    
    <delete id="deleteExpiredTokens" parameterType="java.time.Instant">
    	DELETE FROM voc_token WHERE expiration &lt; #{expiration};
    </delete>

    <delete id="deleteByToken" parameterType="String">
        DELETE FROM voc_token WHERE token = #{token};
    </delete>

    <delete id="deleteByUsername" parameterType="String">
        DELETE FROM voc_token WHERE username = #{username};
    </delete>
    
</mapper>