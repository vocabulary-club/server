<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="web.server.api.mapper._delete_DicMapper">

    <select id="selectByUserId" resultType="Map" parameterType="int">
        select dic_id, eng_voc_id as eng_id, mon_voc_id as mon_id
        from vocabulary.voc_dic
        where user_id = #{userId}
        order by reg_date desc, dic_id desc;
    </select>

    <delete id="deleteByUserId" parameterType="int">
        delete from vocabulary.voc_dic where user_id = #{userId}
    </delete>

</mapper>